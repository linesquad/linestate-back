

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  buy
  rent
}

enum PropertyType {
  apartment
  house
  condo
  land
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  username  String @unique
  email     String @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  posts     Post[]
  savedPost SavedPost[]
}

model Post {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  title     String
  price     Int
  images    String[]
  address   String
  city        String
  bedrooms    Int
  bathrooms   Int
  latitude    String
  longitude   String
  type        Type
  propertyType PropertyType
  user        User @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
  postDetail PostDetails?
  savedPost   SavedPost[]
}



model PostDetails {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  utilities String?
  description String?
  pet       String?
  income    String?
  size      Int?
  school    Int?
  bus       Int?
  restaurant Int?
  post      Post   @relation(fields: [postId], references: [id])
  postId    String @db.ObjectId @unique
}

model SavedPost {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  post      Post   @relation(fields: [postId], references: [id])
  postId    String @db.ObjectId @unique
  user      User   @relation(fields: [userId], references: [id])
  userId    String @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([postId, userId])
}
